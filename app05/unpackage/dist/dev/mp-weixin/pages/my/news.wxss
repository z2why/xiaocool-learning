.ordering {
  margin: 20rpx;
  margin-bottom: 0rpx;
  display: flex;
}
.ordering text {
  margin-right: 60rpx;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 33rpx;
  width: 100rpx;
  text-align: center;
}
.ordering .activetext {
  color: #6495ED;
  font-weight: bold;
  border-bottom: 5rpx solid #6495ED;
}
.actineclass {
  display: block;
}
.errorclass {
  display: none;
}
.Answers {
  border-bottom: 2px solid gainsboro;
  margin: 20rpx;
  margin-bottom: 0rpx;
  flex-direction: column;
  justify-content: space-between;
}
.Answers .answerTop {
  line-height: 50rpx;
  font-size: 38rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
.Answers .answerButtom {
  line-height: 70rpx;
}
.Answers .answerButtom .QuestionT {
  font-size: 33rpx;
  color: gray;
  overflow: hidden;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
.Answers .answerButtom .alseCaina {
  font-size: 28rpx;
  background-color: #6495ED;
  border-radius: 30rpx;
  color: #fff;
  width: 120rpx;
  height: 55rpx;
  line-height: 55rpx;
  margin-left: 0rpx;
  margin-right: auto;
  text-align: center;
  margin-top: 5rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.Questions {
  border-bottom: 2px solid gainsboro;
  margin: 20rpx;
  margin-bottom: 0rpx;
  flex-direction: column;
  justify-content: space-between;
}
.Questions .question {
  line-height: 50rpx;
  line-height: 50rpx;
  font-size: 38rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
.Questions .data {
  line-height: 70rpx;
  font-size: 33rpx;
  color: gray;
}
.Evaluates {
  border-bottom: 2px solid gainsboro;
  margin: 20rpx;
  margin-bottom: 0rpx;
  flex-direction: column;
  justify-content: space-between;
}
.Evaluates .evaluate {
  line-height: 50rpx;
  font-size: 38rpx;
  overflow: hidden;
