.search-box {
  width: 90%;
  height: 70rpx;
  margin: 20rpx auto;
  border: 5rpx solid #00a8cc;
  border-radius: 50rpx;
  display: flex;
  justify-content: space-around;
}
.search-box .inp {
  width: 480rpx;
  height: 70rpx;
  border-radius: 30rpx;
  padding-left: 20px;
  border: none;
  margin-left: 2rpx;
}
.search-box .btn {
  background-color: #00a8cc;
  color: white;
  text-align: center;
  font-size: 35rpx;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 30rpx;
}
.box {
  height: 200rpx;
  border-bottom: 1px solid #f0f0f0;
  padding: 20rpx;
  display: flex;
}
.box .imgView {
  width: 40%;
  height: 200rpx;
}
.box .imgView image {
  width: 100%;
  height: 100%;
}
.box .content {
  width: 55%;
  height: 200rpx;
  margin-left: 20rpx;
}
.box .content ._p {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 50rpx;
}
.box .content ._p image {
  width: 34rpx;
  height: 34rpx;
  position: relative;
  top: 6rpx;
  left: 10rpx;
}
.box .content ._p ._span {
  color: #E6A23C;
  font-size: 40rpx;
}
.box .content .course-introduction {
  font-size: 26rpx;
  color: #c4c4c4;
  line-height: 40rpx;
  margin: 10rpx 0;
}

