.infomation {
  line-height: 60rpx;
  padding-bottom: 120rpx;
}
.infomation image {
  min-width: 100rpx;
  max-width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.infomation .infomationMain {
  padding: 20rpx 20rpx 20rpx 20rpx;
  flex-direction: column;
}
.infomation .infomationMain .title {
  font-size: 40rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
}
.infomation .infomationMain .top {
  line-height: 100rpx;
  padding-bottom: 15rpx;
  font-size: 35rpx;
  font-weight: bold;
  display: flex;
}
.infomation .infomationMain .top image,
.infomation .infomationMain .top text {
  align-items: center;
}
.infomation .infomationMain .top text {
  margin-left: 15rpx;
}
.infomation .infomationMain .content {
  font-size: 33rpx;
  padding-bottom: 15rpx;
}
.infomation .infomationMain .data {
  font-size: 35rpx;
  color: gray;
  padding-bottom: 15rpx;
}
.infomation .infomationMain .info {
  font-size: 35rpx;
}
.infomation .infomationMain .info .actineclass {
  display: block;
}
.infomation .infomationMain .info .errorclass {
  display: none;
}
.infomation .comments {
  padding: 20rpx 20rpx 20rpx 20rpx;
}
.infomation .comments .ctitel {
  padding-top: 30rpx;
  font-weight: bold;
  padding-bottom: 15rpx;
  font-size: 40rpx;
  border-bottom: 1px solid gainsboro;
}
.infomation .comments .comments_item {
  border-bottom: 1px solid gainsboro;
  display: flex;
  padding-bottom: 15rpx;
  font-size: 35rpx;
  padding-top: 20rpx;
}
.infomation .comments .comments_item .right {
  margin-left: 15rpx;
}
.infomation .comments .comments_item .right .cname text:nth-child(1) {
  font-weight: bold;
}
.infomation .comments .comments_item .right .cname text:nth-child(2) {
  margin-left: 100rpx;
  font-size: 35rpx;
  color: gray;
}
.infomation .comments .comments_item .right .cname text:nth-child(3) {
  margin-left: 100rpx;
  font-size: 35rpx;
  color: gray;
}
.infomation .comments .comments_item .right .delete {
  color: firebrick;
  font-size: 30rpx;
}
.infomation .comment-bottom {
  border-top: 1px solid gainsboro;
  padding: 20rpx 20rpx 20rpx 20rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  height: 90rpx;
  font-size: 35rpx;
  display: flex;
}
.infomation .comment-bottom input {
  background-color: lightgrey;
  border-radius: 10rpx;
  width: 500rpx;
  height: 90rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.infomation .comment-bottom .postbutton {
  flex-direction: column;
  width: 150rpx;
  height: 90rpx;
  background-color: #6495ED;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 90rpx;
  margin-left: 30rpx;
}

