.question {
  line-height: 60rpx;
  padding-bottom: 120rpx;
}
.question .questionMain {
  padding: 20rpx 20rpx 20rpx 20rpx;
  flex-direction: column;
}
.question .questionMain .top {
  line-height: 100rpx;
  padding-bottom: 15rpx;
  font-size: 35rpx;
  font-weight: bold;
  display: flex;
}
.question .questionMain .top image,
.question .questionMain .top text {
  align-items: center;
}
.question .questionMain .top text {
  margin-left: 15rpx;
}
.question .questionMain .top image {
  min-width: 100rpx;
  max-width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.question .questionMain .content {
  font-size: 35rpx;
  padding-bottom: 15rpx;
}
.question .questionMain .deleteQ {
  color: firebrick;
  font-size: 30rpx;
}
.question .questionMain .data {
  font-size: 35rpx;
  color: gray;
  padding-bottom: 15rpx;
}
.question .questionMain .info {
  font-size: 35rpx;
}
.question .answerMain {
  padding: 20rpx 20rpx 20rpx 20rpx;
}
.question .answerMain .atitel {
  padding-top: 30rpx;
  font-weight: bold;
  padding-bottom: 15rpx;
  border-bottom: 1px solid gainsboro;
  font-size: 40rpx;
}
.question .answerMain .answers_item {
  border-bottom: 1px solid gainsboro;
  display: flex;
  padding-bottom: 15rpx;
  font-size: 35rpx;
  padding-top: 20rpx;
}
.question .answerMain .answers_item .image {
  width: 18%;
}
.question .answerMain .answers_item .image image {
  min-width: 100rpx;
  max-width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.question .answerMain .answers_item .right {
  width: 82%;
  margin-left: auto;
  margin-right: 0rpx;
  font-size: 35rpx;
}
.question .answerMain .answers_item .right .answer {
  width: 98%;
}
.question .answerMain .answers_item .right .answer text {
  word-wrap: break-word;
  width: 100px;
}
.question .answerMain .answers_item .right .aname text:nth-child(1) {
  font-weight: bold;
}
.question .answerMain .answers_item .right .aname text:nth-child(2) {
  margin-left: 50rpx;
  margin-right: 0rpx;
  color: gray;
}
.question .answerMain .answers_item .right .deletetCai {
  position: relative;
  height: 55rpx;
}
.question .answerMain .answers_item .right .deletetCai .caina {
  font-size: 28rpx;
  border: 3px solid #6495ED;
  border-radius: 30rpx;
  width: 100rpx;
  color: #6495ED;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  font-weight: bold;
  margin-left: auto;
  margin-right: 0rpx;
}
.question .answerMain .answers_item .right .deletetCai .delete {
  color: firebrick;
  font-size: 30rpx;
}
.question .answerMain .answers_item .right .deletetCai .selectCaina {
  color: #6495ED;
  font-size: 30rpx;
}
.question .question-bottom {
  border-top: 1px solid gainsboro;
  padding: 20rpx 20rpx 20rpx 20rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  height: 90rpx;
  font-size: 35rpx;
  display: flex;
}
.question .question-bottom input {
  background-color: lightgrey;
  border-radius: 10rpx;
  width: 500rpx;
  height: 90rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.question .question-bottom .postbutton {
  flex-direction: column;
  width: 150rpx;
  height: 90rpx;
  background-color: #6495ED;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 90rpx;
  margin-left: 30rpx;
}

